@{
    ViewData["Title"] = "Access Denied";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Contract Claim System</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css" />
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .access-denied-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
            padding: 60px 40px;
            max-width: 500px;
            text-align: center;
        }

        .error-icon {
            font-size: 80px;
            color: #dc3545;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="access-denied-card">
        <div class="error-icon">
            <i class="bi bi-shield-x"></i>
        </div>
        <h2 class="text-danger mb-3">Access Denied</h2>
        <p class="text-muted mb-4">
            You do not have permission to access this resource.
        </p>
        <div class="d-grid gap-2">
            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary btn-lg">
                <i class="bi bi-house-door"></i> Go to Dashboard
            </a>
            <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-secondary">
                <i class="bi bi-box-arrow-right"></i> Logout
            </a>
        </div>
    </div>
</body>
</html>