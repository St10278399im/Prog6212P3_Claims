@model CLAIMS_Application.Part2.Models.MonthlyClaim
@{
    ViewData["Title"] = "Review Claim";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Review Claim #@Model.Id</h3>
                    <p class="mb-0 text-muted">Current Status: @Model.Status</p>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Claim Details -->
                    <div class="mb-4">
                        <h5>Claim Information</h5>
                        <dl class="row">
                            <dt class="col-sm-4">Title:</dt>
                            <dd class="col-sm-8">@Model.Title</dd>

                            <dt class="col-sm-4">Description:</dt>
                            <dd class="col-sm-8">@Model.Description</dd>

                            <dt class="col-sm-4">Lecturer:</dt>
                            <dd class="col-sm-8">@Model.LecturerName</dd>

                            <dt class="col-sm-4">Hours Worked:</dt>
                            <dd class="col-sm-8">@Model.HoursWorked.ToString("F2")</dd>

                            <dt class="col-sm-4">Hourly Rate:</dt>
                            <dd class="col-sm-8">R @Model.HourlyRate.ToString("F2")</dd>

                            <dt class="col-sm-4">Total Amount:</dt>
                            <dd class="col-sm-8"><strong>R @Model.TotalAmount.ToString("F2")</strong></dd>

                            <dt class="col-sm-4">Submitted Date:</dt>
                            <dd class="col-sm-8">@Model.SubmittedDate.ToString("yyyy-MM-dd HH:mm")</dd>

                            @if (!string.IsNullOrEmpty(Model.AdditionalNotes))
                            {
                                <dt class="col-sm-4">Additional Notes:</dt>
                                <dd class="col-sm-8">@Model.AdditionalNotes</dd>
                            }
                        </dl>
                    </div>

                    <!-- Approval Progress -->
                    <div class="mb-4">
                        <h5>Approval Progress</h5>
                        <div class="progress mb-3" style="height: 25px;">
                            @{
                                var progress = 0;
                                if (Model.CoordinatorStatus != ApprovalStatus.Pending) progress += 33;
                                if (Model.AdministratorStatus != ApprovalStatus.Pending) progress += 33;
                                if (Model.HRStatus != ApprovalStatus.Pending) progress += 34;
                            }
                            <div class="progress-bar bg-success" role="progressbar" style="width: @progress%" aria-valuenow="@progress" aria-valuemin="0" aria-valuemax="100">
                                @progress% Complete
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="card @(Model.CoordinatorStatus == ApprovalStatus.Approved ? "bg-success text-white" : Model.CoordinatorStatus == ApprovalStatus.Rejected ? "bg-danger text-white" : "bg-light")">
                                    <div class="card-body text-center">
                                        <h6>Coordinator</h6>
                                        <p class="mb-1">@Model.CoordinatorStatus</p>
                                        @if (Model.CoordinatorReviewDate.HasValue)
                                        {
                                            <small>By: @Model.CoordinatorReviewBy</small>
                                        
                                            <br>
                                            <small>On: @Model.CoordinatorReviewDate.Value.ToString("MM/dd HH:mm")</small>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card @(Model.AdministratorStatus == ApprovalStatus.Approved ? "bg-success text-white" : Model.AdministratorStatus == ApprovalStatus.Rejected ? "bg-danger text-white" : "bg-light")">
                                    <div class="card-body text-center">
                                        <h6>Administrator</h6>
                                        <p class="mb-1">@Model.AdministratorStatus</p>
                                        @if (Model.AdministratorReviewDate.HasValue)
                                        {
                                            <small>By: @Model.AdministratorReviewBy</small>
                                        
                                            <br>
                                            <small>On: @Model.AdministratorReviewDate.Value.ToString("MM/dd HH:mm")</small>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card @(Model.HRStatus == ApprovalStatus.Approved ? "bg-success text-white" : Model.HRStatus == ApprovalStatus.Rejected ? "bg-danger text-white" : "bg-light")">
                                    <div class="card-body text-center">
                                        <h6>HR</h6>
                                        <p class="mb-1">@Model.HRStatus</p>
                                        @if (Model.HRReviewDate.HasValue)
                                        {
                                            <small>By: @Model.HRReviewBy</small>
                                        
                                            <br>
                                            <small>On: @Model.HRReviewDate.Value.ToString("MM/dd HH:mm")</small>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Review Forms -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card bg-success text-white">
                                <div class="card-body">
                                    <h5 class="card-title">Approve Claim</h5>
                                    <form asp-action="Approve" method="post">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@Model.Id" />
                                        <div class="mb-3">
                                            <label for="approveNotes" class="form-label">Review Notes (Optional)</label>
                                            <textarea name="reviewNotes" class="form-control" rows="3" placeholder="Optional notes for approval"></textarea>
                                        </div>
                                        <button type="submit" class="btn btn-light w-100">Approve Claim</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-danger text-white">
                                <div class="card-body">
                                    <h5 class="card-title">Reject Claim</h5>
                                    <form asp-action="Reject" method="post">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@Model.Id" />
                                        <div class="mb-3">
                                            <label for="rejectNotes" class="form-label">Review Notes *</label>
                                            <textarea name="reviewNotes" class="form-control" rows="3" placeholder="Required reason for rejection" required></textarea>
                                        </div>
                                        <button type="submit" class="btn btn-light w-100">Reject Claim</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-3">
                        <a asp-controller="Dashboard" asp-action="MentorDashboard" class="btn btn-secondary">Back to Dashboard</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>>